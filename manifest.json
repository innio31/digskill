/* Auth Specific Styles */
.auth-container {
    max-width: 400px;
    margin: 0 auto;
    padding: 40px 20px;
}

.auth-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.auth-form input {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid var(--light-gray);
    border-radius: 5px;
    font-family: inherit;
}

.auth-form button {
    width: 100%;
}

.auth-options {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
}

.auth-options a {
    color: var(--gray);
    font-size: 0.9rem;
}

.auth-options a:hover {
    color: var(--primary-color);
}

.auth-divider {
    display: flex;
    align-items: center;
    margin: 20px 0;
    color: var(--gray);
    font-size: 0.9rem;
}

.auth-divider:before,
.auth-divider:after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--light-gray);
    margin: 0 10px;
}

.auth-footer {
    text-align: center;
    margin-top: 20px;
    color: var(--gray);
    font-size: 0.9rem;
}

.auth-footer a {
    font-weight: 500;
}

/* Dashboard Login */
#loginModal .modal-content {
    max-width: 400px;
}

#googleSignInBtn,
#enrollGoogleSignInBtn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 12px;
    font-size: 1rem;
}

#googleSignInBtn i,
#enrollGoogleSignInBtn i {
    font-size: 1.2rem;
}

.auth-note {
    text-align: center;
    color: var(--gray);
    font-size: 0.9rem;
    margin-top: 15px;
}